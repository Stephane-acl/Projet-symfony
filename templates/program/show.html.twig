{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1 class="text-center" style="margin: 30px">Série {{ program.title }}</h1>
    <div class="container h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-12">
                <div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>#</th>
                            <td>{{ program.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ program.title }}</td>
                        </tr>
                        <tr>
                            <th>Synopsis</th>
                            <td>{{ program.synopsis }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td><img src="{{ program.poster }}" alt="{{ program.title }}" height="280px"></td>
                        </tr>
                        <tr>
                            <th>Pays</th>
                            <td>{{ program.country }}</td>
                        </tr>
                        <tr>
                            <th>Année</th>
                            <td>{{ program.year }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">
                        <button class="btn btn-primary">Editer</button>
                       <div  style="margin-top: 10px">{{ include('program/_delete_form.html.twig') }}</div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('program_index') }}">Retour à la liste</a>

{% endblock %}
