{% extends 'base.html.twig' %}

{% block body %}

    <h1 style="color:#193365; margin-top:25px" class="text-center">
        Episode {{ episode.number }} de la Saison {{ season.number }}
    </h1>
    <hr/>
        <div class="card mb-3  col-12 bg-secondary container-fluid">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ episode.poster }}" class="card-img" alt="{{ episode.title }}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 style="color:#193365" class="card-title">{{ episode.title }}</h4>
                        <p class="card-text">{{ episode.synopsis }}</p>
                    </div>
                </div>
            </div>
        </div>
    <a href="{{ path('wild_show_season', {'id': season.id}) }}"><button type="submit" class="btn btn-primary">Retour</button></a>

{% endblock %}