{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1 class="text-center" style="margin: 30px">Saison {{ season.number }}</h1>
    <div class="container h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-12">
                <div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>#</th>
                            <td>{{ season.id }}</td>
                        </tr>
                        <tr>
                            <th>Numéro</th>
                            <td>{{ season.number }}</td>
                        </tr>
                        <tr>
                            <th>Année</th>
                            <td>{{ season.year }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ season.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">
                        <button class="btn btn-primary">Editer</button>
                    </a>
                    <div  style="margin-top: 10px">{{ include('season/_delete_form.html.twig') }}</div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('season_index') }}">Retour à la liste</a>
{% endblock %}
